SELECT 
  film_id
  , title
  , length
FROM film
WHERE length < (SELECT MIN(length) 
                FROM film 
                WHERE rating ='R') OR
      length > (SELECT PERCENTILE_DISC(0.5) WITHIN GROUP (ORDER BY length)
                FROM film
                WHERE rating = 'PG-13')
ORDER BY 
  length ASC
  , title ASC
  , film_id ASC
      
